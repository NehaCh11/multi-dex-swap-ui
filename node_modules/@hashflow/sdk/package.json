{
  "name": "@hashflow/sdk",
  "version": "2.3.8",
  "description": "Javascript SDK to interact with Hashflow Smart Contracts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "rm -rf dist/ && yarn build:typechain:protocol && yarn build:typechain:governance && yarn build:typechain:hashverse && tsc",
    "build:typechain:protocol": "typechain --target ethers-v6 --out-dir src/contracts/protocol './node_modules/@hashflow/contracts-evm/abi/*.json'",
    "build:typechain:governance": "typechain --target ethers-v6 --out-dir src/contracts/governance './node_modules/@hashflow/governance/abi/*.json'",
    "build:typechain:hashverse": "typechain --target ethers-v6 --out-dir src/contracts/hashverse './node_modules/@hashflow/hashverse-contracts-evm/abi/*.json'",
    "build:typechain:optimism": "typechain --target ethers-v6 --out-dir src/contracts/optimism './src/optimism/IGasOracle.json'",
    "tsc": "tsc",
    "prettier": "prettier --config .prettierrc.json --write ./src"
  },
  "engines": {
    "yarn": "^1.22.10",
    "node": ">=20.18.2"
  },
  "author": "victor@hashflow.com",
  "license": "ISC",
  "dependencies": {
    "@hashflow/contracts-evm": "2.0.17",
    "@hashflow/governance": "1.0.6",
    "@hashflow/hashverse-contracts": "1.3.1",
    "@hashflow/hashverse-contracts-evm": "1.1.0",
    "@hashflow/protocol": "1.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.20.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@types/node": "^20.14.8",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "dotenv": "^16.4.7",
    "eslint": "^9",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.8.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "ethers": "^6.13.5",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5"
  },
  "peerDependencies": {
    "ethers": "^6.7.0"
  }
}
